    display: flex;
    visibility: visible;
    -unity-text-align: middle-center;
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    color: rgb(221, 221, 221);
    -unity-text-outline-color: rgb(207, 207, 207);
    transition-duration: 0.15s;
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
}

.ingame-header-text {
    font-size: 20px;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 10px;
    margin-bottom: 10px;
    width: auto;
    -unity-text-align: middle-center;
    color: rgba(255, 255, 255, 255);
}

.ingame-header-button {
    width: 10%;
    height: 47%;
    font-size: 20px;
}

.options-text {
    font-size: 20px;
    color: rgb(255, 255, 255);
    -unity-text-align: middle-center;
    white-space: nowrap;
    margin-left: 6px;
    margin-right: 6px;
    margin-top: 6px;
    margin-bottom: 6px;
}

.emergin-menu {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 50%;
    min-height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
}
