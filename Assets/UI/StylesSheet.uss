.hide {
    display: none;
}

.menu-button {
    width: 30%;
    height: 20%;
    left: auto;
    align-items: center;
    justify-content: center;
    top: auto;
    position: relative;
    right: auto;
    font-size: 300%;
    -unity-font-style: normal;
    display: flex;
    visibility: visible;
    -unity-text-align: middle-center;
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    color: rgb(221, 221, 221);
    -unity-text-outline-color: rgb(207, 207, 207);
    transition-duration: 0.15s;
}

.menu-button:hover {
    width: 30%;
    height: 20%;
    left: auto;
    align-items: center;
    justify-content: center;
    top: auto;
    position: relative;
    right: auto;
    font-size: 400%;
    -unity-font-style: normal;
    display: flex;
    visibility: visible;
    -unity-text-align: middle-center;
    background-color: rgba(255, 255, 255, 0);
    color: rgb(255, 255, 255);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    transition-duration: 0.15s;
}

.level-list-button {
    width: auto;
    height: auto;
    left: auto;
    align-items: center;
    justify-content: center;
    top: auto;
    position: relative;
    right: auto;
    font-size: 30px;
    -unity-font-style: normal;
    display: flex;
    visibility: visible;
    -unity-text-align: middle-center;
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    color: rgb(221, 221, 221);
    -unity-text-outline-color: rgb(207, 207, 207);
    transition-duration: 0.15s;
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
}

.level-list-button:hover {
    width: auto;
    height: auto;
    left: auto;
    align-items: center;
    justify-content: center;
    top: auto;
    position: relative;
    right: auto;
    font-size: 40px;
